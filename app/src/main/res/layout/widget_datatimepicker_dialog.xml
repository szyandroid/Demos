<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvdialogname"
        style="@style/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="@string/select_oper"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f8f8f8"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="#0055cd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="选择时间"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="确定"
            android:textColor="#0055cd"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/line_fill_parent" />

    <com.szy.demos.view.DateTimePicker
        android:id="@+id/datePicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip" />

    <View style="@style/line_fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btncancle"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel_text"
            android:textColor="@color/grey_txt"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/grey_line"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm_text"
            android:textColor="#0055cd"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="该时间为代价师傅到点取车时间"
        android:textColor="#a7a7a7"
        android:textSize="13sp" />
</LinearLayout>
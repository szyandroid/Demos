        <activity
            android:name=".ui.activity.VolleyActivity"
            android:screenOrientation="portrait" />
        <!-- 项目框架 -->
        <activity
            android:name=".ui.activity.project.ProjectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.project.TestActivity"
